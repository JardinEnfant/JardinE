{% extends'baseAdmin.html.twig' %}

{% block headF %}
<div style="margin-left: 550px">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <h1>Categories list</h1>
    <input type="text" placeholder="&#xf002; Rechercher ..." class="form-control  col-3 offset-8 fa fa-search" name="search"id="myInput"  >

    <table class="table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                <th>Nomcategorie</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td><a href="{{ path('categorie_show', { 'id': categorie.id }) }}">{{ categorie.id }}</a></td>
                <td>{{ categorie.photo }}</td>
                <td>{{ categorie.nomCategorie }}</td>
                <td>{{ categorie.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="mb-2 mr-2 btn btn-success" href="{{ path('categorie_show', { 'id': categorie.id }) }}">Detail</a>
                        </li>
                        <li>
                            <a class="mb-2 mr-2 btn btn-alternate" href="{{ path('categorie_edit', { 'id': categorie.id }) }}">Modifier</a>
                        </li>
                        <li>
                            <div class="col-xs-12">
                                <br>
                                <button class="mb-2 mr-2 btn btn-info" onclick="window.print();"><i class="mdi mdi-printer btn-icon-append"></i> Imprimer</button>
                            </div>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation text-center">
        {{ knp_pagination_render(categories) }}
    </div>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</div>
{% endblock %}
