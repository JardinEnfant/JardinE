{% extends'baseAdmin.html.twig' %}

{% block headF %}
<div style="margin-left: 550px">
    <h1>Activite</h1>

    <table class="table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ activite.photo }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activite.nomActivite }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if activite.dateActivite %}{{ activite.dateActivite|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Time start</th>
                <td>{% if activite.timeStart %}{{ activite.timeStart|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Time end</th>
                <td>{% if activite.timeEnd %}{{ activite.timeEnd|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activite.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="mb-2 mr-2 btn btn-success" href="{{ path('activite_index', { 'id': activite.id }) }}">Retour a la liste</a>
        </li>
        <li>
            <a class="mb-2 mr-2 btn btn-alternate" href="{{ path('activite_edit', { 'id': activite.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <a> <input class="mb-2 mr-2 btn btn-danger" type="submit" value="Delete" /> </a>
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
