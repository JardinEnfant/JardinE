{% extends "baseAdmin.html.twig" %}
{% block content %}
    <div class="container">
    <div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title">Liste des Abonnements</h1>
    </div>
    <div class="panel-body">
    <input id="autocomplete" placeholder="Enter your address" onFocus="geolocate()" type="text" class="form-control">
    <br>
    <table class="table">
        <thead class="thead-light">
        <tr>
            <th scope="col">Abonnement n*</th>
            <th scope="col">Options</th>
            <th scope="col">TYPES</th>
            <th scope="col">prix</th>
            <th scope="col">Nombre de mois</th>
            <th scope="col">Supprimer</th>
            <th scope="col">Modifier</th>
        </tr>
        </thead>
        <tbody>
        {% for Abonnement in Abonnement %}
            <tr>

                <td>{{Abonnement.id}}</td>
                <td>{{Abonnement.options}}</td>
                <td>{{Abonnement.type}}</td>
                <td>{{Abonnement.prix}}</td>
                <td>{{Abonnement.nbMois }}</td>
                <td><a href="{{path('Supprimer_Abonnement',{'id':Abonnement.id}) }}"><button type="button" class="btn btn-danger">SUPPRIMER</button></a></td>
                <td><a href="{{path('Modifier_Abonnement',{'id':Abonnement.id}) }}"><button type="button" class="btn btn-primary">MODIFIER</button></a></td>

                {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    </div>


{% endblock %}