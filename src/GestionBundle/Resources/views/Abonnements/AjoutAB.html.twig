{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
{% block body %}

    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Abonnement</h3>
            </div>
            <div class="panel-body">
                <input id="autocomplete" placeholder="Enter your address" onFocus="geolocate()" type="text" class="form-control">
                <br>
                <div class="well">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                    {{ form_errors(form) }}

                    <div class="form-group">
                        {{ form_label(form.options, "options", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        {{ form_errors(form.options) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.options, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.type, "type", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        {{ form_errors(form.type) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.prix, "prix", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        {{ form_errors(form.prix) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.nbMois, "nbMois", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        {{ form_errors(form.nbMois) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.nbMois, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>









                    {{ form_rest(form) }}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}